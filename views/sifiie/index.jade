    div#registro-escuelas
      form(action='/sifiie/escuelas/nuevo', method='POST')
        fieldset
          if(typeof(escuela_nueva)!="undefined")
              p #{escuela_nueva.message}
          input(type="text", placeholder="Clave Ejem: 1", id="clave", name="clave")
          input(type="text", placeholder="Nombre Escuela", id="nombre", name="nombre")
          input(type="text", placeholder="Siglas", id="siglas", name="siglas")
          select(title="obligatorio-Debes seleccionar la dependencia de la UAA." style="width: 280px;", id="dependencia", name="dependencia")
            option(value="")
            option(value="1" title="Unidades Administrativas") Unidades Administrativas
            option(value="2" title="Unidades Académicas de Nivel Medio Superior") Unidades Académicas de Nivel Medio Superior
            option(value="3" title="Unidades Académicas del Nivel Superior") Unidades Académicas del Nivel Superior
            option(value="4" title="Unidades Académicas de Investigación Científica y Tecnológica") Unidades Académicas de Investigación Científica y Tecnológica
            option(value="5" title="Unidades Académicas de Educación Continua") Unidades Académicas de Educación Continua
            option(value="6" title="Unidades Académicas de Apoyo Educativo") Unidades Académicas de Apoyo Educativo
            option(value="7" title="Unidades de Apoyo a la Innovación Educativa") Unidades de Apoyo a la Innovación Educativa
            option(value="8" title="Unidades de Apoyo a la Investigación, al Desarrollo y Fomento Tecnológico y Empresarial") Unidades de Apoyo a la Investigación, al Desarrollo y Fomento Tecnológico y Empresarial
            option(value="9" title="Clusters Politécnicos") Clusters Politécnicos
          input(type="text", placeholder="Responsable", id="responsable", name="responsable")
          input(type="text", placeholder="Cargo", id="cargo", name="cargo")
          input(type="text", placeholder="Dirección", id="direccion", name="direccion")
          input(type="text", placeholder="Coordenadas", id="coordenadas", name="coordenadas")
          input(type="submit", value="Guardar")
    
