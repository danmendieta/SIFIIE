 -if(typeof(listaescuelas)!="undefined")
    table#escuelas(border="0", cellpadding="0", cellspacing="0", class="pretty")
      thead
        tr
          td.hidden ID
          th Clave
          th Nombre
          th Siglas
          th Dependencias
          th Responsable
          th Cargo
          th Dirección
          th Coordenadas
          th Editar
          th Eliminar
      tbody
        each item in listaescuelas
          tr
            td.hidden #{item._id}
            td #{item.clave}  
            td #{item.nombre}  
            td #{item.siglas}  
            td #{item.dependencia}  
            td #{item.responsable}  
            td #{item.cargo}  
            td #{item.direccion}  
            td #{item.coordenadas}  
            td
              a(href="#") Editar
            td
              a(href="#") Eliminar



